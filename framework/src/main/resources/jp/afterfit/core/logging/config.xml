<?xml version="1.0" encoding="UTF-8" ?>

<included>
    <!-- default logback configuration -->
    <include resource="org/springframework/boot/logging/logback/defaults.xml"/>

    <!-- properties -->
    <property name="empty.trace-id" value="----------------"/>
    <property name="empty.span-id" value="----------------"/>
    <property name="LOG_PATTERN"
              value="${LOG_PATTERN:-%clr(%d{${LOG_DATEFORMAT_PATTERN:-yyyy-MM-dd HH:mm:ss.SSS}}){faint} %clr(${LOG_LEVEL_PATTERN:-%5p}) %clr(${PID:- }){magenta} %clr(---){faint} %clr([%15.15t]){faint} %clr([%X{x-trace-id:-${empty.trace-id}}/%X{x-span-id:-${empty.span-id}}]){yellow} %clr(%-40.40logger{39}){cyan} %clr(:){faint} %m%n${LOG_EXCEPTION_CONVERSION_WORD:-%wEx}}"/>
</included>